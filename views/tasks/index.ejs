<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasklytic - Tasks</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to the new CSS file -->
    <img src="/images/Tasklytic.webp" alt="Tasklytic Logo" width="100" height="100" style="border-radius: 50%;">
</head>
<body>

    <!-- Navbar -->
    <nav>
        <div class="logo">
            <img src="/images/Tasklytic.webp" alt="Tasklytic Logo">
        </div>
        <ul>
            <li><a href="/tasks">All Tasks</a></li>
            <li><a href="/tasks/new">Add New Task</a></li>
            <li><a href="/tasks/pending">Pending Tasks</a></li> <!-- Link to Pending Tasks -->
            <li><a href="/tasks/completed">Completed Tasks</a></li> <!-- Link to Completed Tasks -->
            <li><a href="/users/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="task-list">
        <h2>Your Tasks</h2>
        <% if (tasks.length > 0) { %>
            <ul>
                <% tasks.forEach(task => { %>
                    <li class="task">
                        <h3><%= task.title %></h3>
                        <p><%= task.description %></p>
                        <p>Due Date: <%= task.dueDate.toDateString() %></p>

                        <!-- Mark as Complete/Incomplete -->
                        <form action="/tasks/<%= task._id %>/toggle?_method=PUT" method="POST">
                            <input type="checkbox" name="completed" value="<%= task.completed %>" 
                                   <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()">
                            <label><%= task.completed ? 'Mark as Incomplete' : 'Mark as Complete' %></label>
                        </form>

                        <!-- Edit and Delete buttons -->
                        <form action="/tasks/<%= task._id %>/edit" method="GET">
                            <button type="submit">Edit Task</button>
                        </form>

                        <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete Task</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No tasks found. <a href="/tasks/new">Create a new task</a></p>
        <% } %>
    </div>

</body>
</html>
