<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
</head>
<body>
    <h1>Your Tasks</h1>
    
    <a href="/tasks/new">Add New Task</a>
    
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <strong><%= task.title %></strong><br>
                Description: <%= task.description %><br>
                Due Date: <%= task.dueDate.toDateString() %><br>
                Completed: <%= task.completed ? "Yes" : "No" %><br>

                <!-- Links to edit, complete, and delete -->
                <a href="/tasks/<%= task._id %>/edit">Edit</a>
                <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
                    <button type="submit">Mark as Complete</button>
                </form>
                <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>