<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Tasks</title>
</head>
<body>
    <!-- Navbar -->
    <nav>
        <ul>
            <li><a href="/tasks">All Tasks</a></li>
            <li><a href="/tasks/completed">Completed Tasks</a></li>
            <li><a href="/tasks/new">Add New Task</a></li>
            <li><a href="/users/logout">Logout</a></li>
        </ul>
    </nav>

    <h1>Pending Tasks</h1>

    <% if (tasks.length === 0) { %>
        <p>There are currently no pending tasks.</p>
    <% } else { %>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <h3><%= task.title %></h3>
                    <p><%= task.description %></p>
                    <p>Due Date: <%= task.dueDate.toDateString() %></p>
                    <!-- No checkbox here -->
                    <a href="/tasks/<%= task._id %>/edit">Edit Task</a>
                    <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Delete Task</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% } %>

</body>
</html>
