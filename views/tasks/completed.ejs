<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Completed Tasks</title>
    <link rel="stylesheet" href="/css/styles.css">
    <img src="/images/Tasklytic.webp" alt="Tasklytic Logo" width="100" height="100" style="border-radius: 50%;">
</head>
<body>   
    <!-- Navbar -->
    <nav>
        <div class="logo">
            <img src="/images/Tasklytic.webp" alt="Tasklytic Logo">
        </div>
        <ul>
            <li><a href="/tasks">All Tasks</a></li>
            <li><a href="/tasks/pending">Pending Tasks</a></li>
            <li><a href="/tasks/new">Add New Task</a></li>
            <li><a href="/users/logout">Logout</a></li>
        </ul>
    </nav>

    <h1>Completed Tasks</h1>

    <% if (tasks.length === 0) { %>
        <p>There are currently no completed tasks.</p>
    <% } else { %>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <h3><%= task.title %></h3>
                    <p><%= task.description %></p>
                    <p>Due Date: <%= task.dueDate.toDateString() %></p>
                    <!-- No checkbox here -->
                    <form action="/tasks/<%= task._id %>/edit" method="GET" style="display:inline;">
                        <button type="submit">Edit Task</button>
                    </form>
                    <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Delete Task</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% } %>

</body>
</html>
